<div class="row">
  <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2">
    <div class="card">
      <div class="card-body">
        <h2 class="d-flex justify-content-center">Admin</h2>
        <h2 class="d-flex justify-content-center">Log in</h2>

        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="mb-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        
          <div class="mb-2">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="mb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="mb-4">
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>