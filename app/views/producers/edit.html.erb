<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h2>プロフィール編集</h2>

    <%= form_with model: @producer do |f| %>
      <div class="form-group">
        <%= f.label :"名前" %>
        <span>姓</span><%= f.text_field :first_name, autofocus: true, class: "form-control name" %>
        <span>名</span><%= f.text_field :last_name, autofocus: true, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :"プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file consumer_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control emai" %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code, class: "form-control postal_code" %>
      </div>
      <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_field :address, class: "form-control address" %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number, class: "form-control telephone_number" %>
      </div>
  
      <%= f.submit "Update" %>
  
    <% end %>
  </div>
</div>