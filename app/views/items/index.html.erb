<h1>商品一覧</h1>
<%= render 'items/search_form', url: items_path %>

<table class="table table-bordered">
  <thead>
    <tr style="background-color: #f7f7f7">
      <th width="20%">商品画像</th>
      <th width="50%">商品名</th>
      <th width="10%">ジャンル</th>
      <th width="20%">商品価格(税抜)</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.get_image(180,150), size: "180x150" %></td>
      <td><%= link_to item.name, item_path(item.id) %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
