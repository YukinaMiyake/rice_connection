<div class="row mb-3">
  <div class="col-lg-10">
    <%= form_with url: url, method: :get do |f| %>
      <div class="row">
        <div class="col-md-4 mb-2">
          <%= f.search_field :keyword, value: params[:keyword], placeholder: "--キーワードで検索--", class: "form-control" %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.collection_select :genre_id, Genre.all, :id, :name,
            { include_blank: "--産地で検索--", selected: params[:genre_id] },
            { class: "form-control" } %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.select :order, [["新着順", :created_at__desc],
                                ["古い順", :created_at__asc],
                                ["安い順", :price__asc],
                                ["高い順", :price__desc]],
            { selected: params[:order] },
            { class: "form-control" } %>
        </div>
        <div class="col-md-2 mb-2">
          <%= f.submit "検索", class: "btn btn-outline-secondary btn-block" %>
        </div>
      </div>
    <% end %>   
  </div>
</div>