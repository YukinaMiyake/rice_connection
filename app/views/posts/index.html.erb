<h1 class="mb-3">投稿一覧</h1>
<div class="row">
  <div class="col-md-6 mb-3">
    <%= form_with url: posts_path, method: :get do |f| %>
    <div class="row">
      <div class="col-md-9">
        <%= f.search_field :keyword, value: params[:keyword], placeholder: "--キーワードで検索--", class: "form_control" %>
      </div>
      <div class="col-md-3">
        <%= f.submit "検索", class: "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
    <% end %>
    </div>
</div>

<%= render 'index', posts: @posts %>
