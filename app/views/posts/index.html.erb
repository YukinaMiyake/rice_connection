<h1 class="mb-3">投稿一覧</h1>
<div class="row">
  <div class="col-md-6 mb-3">
    <%= form_with url: posts_path, method: :get do |f| %>
    <div class="row">
      <div class="col-md-3">
         <%= f.select :search_type, [["投稿", 'post'], ["生産者", 'producer']], { selected: params[:search_query] }, { class: "form-control" } %>
      </div>
      <div class="col-md-7">
        <%= f.search_field :search_query, value: params[:search_query], placeholder: "--キーワードで検索--", class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.submit "検索", class: "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render 'index', posts: @posts %>

.about {
  width: 100%;
  height: 900px;
  background-image: url(../images/about_picture.jpg);
  background-size: cover;
}