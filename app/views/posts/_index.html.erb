<table class="table table-hover table-inverse">
  <thead>
    <tr style="background-color: #f5f5f5">
      <th></th>
      <th>画像</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>商品名</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td><%= image_tag post.producer.get_profile_image(100,100), size: "100x100" %></td>
      <td><%= image_tag post.get_image(100, 100), size: "100x100" %></td>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= post.body.truncate(20) %></td>
      <td><%= post.item.name %></td>
      <td><%= link_to "#{post.post_comments.count}コメント", post_path(post.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>