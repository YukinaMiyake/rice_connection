<div class="row">
  <h1 class="mb-3">投稿詳細</h1>
</div>
<div class="row">
  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag @post.get_image(300, 200), size: "300x200" %></td>
      </tr>
      <tr>
        <td width="20%"><%= image_tag @post.producer.get_profile_image(100,100) %><br />
          <p><%= link_to @post.producer.name, producer_path(@producer.id) %></p></td>
        <td width="20%"><%= @post.title %></td>
        <td width="30%"><%= @post.body %></td>
        <td width="10%"><%= link_to @post.item.name, item_path(@item.id) %></td>
        <td width="10%"><%= @post.created_at.strftime('%Y/%m/%d') %></td>
          <% if @post.producer == current_producer %>
        <td width="5%"><%= link_to 'Edit', edit_post_path(@post.id), class: "btn btn-sm btn-success" %></td> 
        <td width="5%"><%= link_to 'Destroy', post_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
          <% end %>
      </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <p class="font-weight-bold">コメント件数:<%= @post.post_comments.count %>件</p>
</div>
<% @post.post_comments.each do |post_comment| %>
  <div class="row">
    <div class="col-md-3">
      <p><%= image_tag post_comment.consumer.get_profile_image(100,100) %></p>
      <p><%= post_comment.consumer.name %></p>
    </div>
    <div class="col-md-1" %>
      <p><%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <div class="col-md-3">
      <p><%= post_comment.content %></p>
    </div>
    <div class="col-md-1">
      <% if @post_comment.consumer == current_consumer %>
        <%= link_to "Destroy", post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-outline-danger" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <% if current_consumer %>
    <div>
      <%= form_with model: [@post, @post_comment] do |f| %>
        <%= f.text_area :content, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  <% end %>
</div>
</div>