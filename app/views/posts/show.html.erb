<div class="row">
<h1>投稿詳細</h1>
<table class="table">
  <tbody>
    <tr>
      <td><%= image_tag @post.get_image(50, 50) %></td>
    </tr>
    <tr>
      <td><%= image_tag @post.producer.get_profile_image(100,100) %><br />
        <p><%= link_to @post.producer.name, producer_path(@producer.id) %></p></td>
      <td><%= @post.title %></td>
      <td><%= @post.body %></td>
      <td><%= link_to @post.item.name, item_path(@item.id) %></td>
      <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
        <% if @post.producer == current_producer %>
      <td><%= link_to 'Edit', edit_post_path(@post.id), class: "btn btn-sm btn-success" %></td> 
      <td><%= link_to 'Destroy', post_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
        <% end %>
    </tr>
  </tbody>
</table>

<div>
  <p>コメント件数:<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.consumer.get_profile_image(100,100) %></p>
    <%= post_comment.consumer.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.content %>
    <% if @post_comment.consumer == current_consumer %>
      <%= link_to "削除", post_comment_path(post_comment.id), method: :delete %>
    <% end %>
  <% end %>
</div>

<% if current_consumer %>
  <div>
    <%= form_with model: [@post, @post_comment] do |f| %>
      <%= f.text_area :content, rows: '5', placeholder: "コメントをここに" %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
<% end %>
</div>