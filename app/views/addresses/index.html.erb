<div class="row">
  <div class="col-md-8 col-lg-6 ">
  <h2>配送先登録/一覧</h2>
  <%= render 'address_form', address: @address %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-lg-6">
  <table class="table table-borderd">
    <thead>
      <tr class="table-secondary">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除", addresses_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>

