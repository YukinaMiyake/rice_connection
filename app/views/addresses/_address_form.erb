<%= form_with model: address do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="form-group">
  <%= f.label :"郵便番号" %>
  <%=f.text_field :postal_code, class: "form-control mb-2" %>
  </div>
  <div class="form-group">
  <%= f.label :"住所" %>
  <%= f.text_field :address, class: "form-control  mb-2" %>
  </div>
  <div class="form-group">
  <%= f.label :"宛名" %>
  <%= f.text_field :name, class: "form-control mb-2" %>
  </div>
  <div class="text-right">
  <%= f.submit submit, class: "btn btn-success btn-block mt-3 mb-3" %>
  </div>
<% end %>

