<div class="row">
  <div class="col-md-10">
  <h3>ショッピングカート</h3>


<% if @cart_items.count == 0 %>
  <p>No Item</p>
  <%= link_to 'Find item', items_path, class: "btn btn-secondary" %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.get_image(10,10) %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= form_with model: cart_item, method: :patch do |f| %>
              <%= f.select :amount, options_for_select(1..3, cart_item.amount) %>
              <%= f.submit "変更" %>
            <% end %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-bordered">
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr><td class="table-secondary">合計金額</td>
    　  　<td><%= @total_price += cart_item.subtotal %></td></tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
<% end %>
 </div>
</div>