<div class="row">
  <div class="col-md-8 offset-md-2">
  <h1>ショッピングカート</h1>


<% if @cart_items.count == 0 %>
  <p>No Item</p>
  <%= link_to 'Find item', items_path, class: "btn btn-secondary" %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cat_item| %>
      <tr>
        <td><%= image_tag cart_item.get_image(10,10) %><%= cart_item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= form_with model: cart_item do |f| %>
              <%= f.select :amount, options_for_select(1..3, cart_item.amount) %>
              <%= f.submit "変更" %>
            <% end %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
 </div>
</div>