<div class="row">
  <h2 class="mt-3">ショッピングカート</h2>
</div>
<% if @cart_items.count == 0 %>
  <h4 class="my-5 ml-5">No Item</h4>
  <%= link_to 'Find item', items_path, class: "btn btn-secondary" %>
<% else %>
  <table class="table">
    <thead>
      <tr style="background-color: #f5f5f5">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.get_image(300,200), size: "300x200" %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= form_with model: cart_item, method: :patch do |f| %>
              <%= f.select :amount, options_for_select(1..3, cart_item.amount) %>
              <%= f.submit "変更" %>
            <% end %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th class="table-secondary">合計金額</th>
    　   <td><%= @cart_items.total %></td>
    　</tr>
    </tbody>
  </table>
  <%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
  <%= link_to "注文する", new_consumer_order_path, class: "btn btn-success ml-3" %>
<% end %>


