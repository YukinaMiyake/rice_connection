<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-sm-8 offset-sm-2 mt-4">
    <h2 class="d-flex justify-content-center">プロフィール編集</h2>

    <%= form_with model: @consumer do |f| %>
      <div class="mb-1">
        <label>名前</label>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :profile_image, "プロフィール画像" %>
        <%= f.file_field :profile_image, autocomplete: "profile_image", class: "form-control-file", accept: "image/*" %>
      </div>
      <div class="mb-2">
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :postal_code, "郵便番号" %>
        <%= f.text_field :postal_code, autocomplete: "postal_code", class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
      </div>
      <div class="mb-4">
        <%= f.label :telephone_number, "電話番号" %>
        <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
      </div>
      
      <%= f.submit "Update", class: "btn btn-secondary btn-block" %>
      
    <% end %>
  </div>
</div>
 