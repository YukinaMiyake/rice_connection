<div class="row">
<h2 class="mb-4">注文履歴詳細</h2>
</div>
<h4>注文情報</h4>
<table class="table table-borderd">
  <thead>
  <tr style="background-color: #f5f5f5">
    <th>注文日</th>
    <th>配送先</th>
    <th>支払方法</th>
    <th>ステータス</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= @order.address %></td>
      <td><%= @order.payment_method_i18n %></td>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<h4>請求内容</h4>
<table class="table table-borderd">
  <thead>
  <tr style="background-color: #f5f5f5">
    <th>商品合計</th>
    <th>送料</th>
    <th>ご請求金額</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= number_with_delimiter(@order.order_details.total) %></td>
      <td><%= number_with_delimiter(shipping_cost = Item.shipping_cost * @order_details.item_count) %></td>
      <td><%= number_with_delimiter(@order.order_details.total + @order.shipping_cost) %></td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table class="table table-borderd">
  <thead>
    <tr style="background-color: #f5f5f5">
      <th>商品</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= number_with_delimiter(order_detail.item.with_tax_price) %></td>
      <td>
        <%= order_detail.amount %>個
        
      </td>
      <td><%= number_with_delimiter(order_detail.subtotal) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "注文履歴一覧に戻る", consumer_orders_path, class: "btn btn-outline-secondary" %>




