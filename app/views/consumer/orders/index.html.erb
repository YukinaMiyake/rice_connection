<div class="row">
  <div class="col-md-3">
    <%= render 'consumers/user_info', consumer: current_consumer %>
  </div>
  <div class="col-md-9">
    <h2 class="mb-4">注文履歴一覧</h2>
    <table class="table table-bordered">
      <thead>
      <tr style="background-color: #f5f5f5">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= l order.created_at, format: :long %></td>
          <td><%= order.address %></td>
          <td><% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
          </td>
          <td><%= number_with_delimiter(order.order_details.total) %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", consumer_order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>