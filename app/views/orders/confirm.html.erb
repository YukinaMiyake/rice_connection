
<h3>注文情報確認</h3>
<table>
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(10,10) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <td>送料</td>
    <td>
      <%#= form_with model: @cart_item, method: :patch do |f| %>
          <%#= f.select :shipping_cost, options_for_select([800,1000], cart_item.shipping_cost) %>
      <%= shipping_cost = Item.shipping_cost * @cart_items.item_count %>
    </td>
    <td>商品合計</td>
    <td><%= @cart_items.total %></td>
    <td>請求金額</td>
    <td><%= @cart_items.total + shipping_cost %></td>
  </tr>
</table>
<table>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td><%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %></td>
  </tr>
</table>

<%= form_with model: @order_new, url: '/orders', local: true do |f| %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :total_payment, value: @total + 800 %>
  <%= f.hidden_field :shipping_cost, value: 800 %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.submit "注文を確定する", class: "btn btn-secondary mt-3" %>
<% end %>


