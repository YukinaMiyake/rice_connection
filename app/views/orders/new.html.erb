<h3>注文情報入力</h3>
<%= form_with model: @order, url: '/orders/confirm', local: true do |f| %>
  <h4>支払い方法</h4>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>
  
  <h4>お届け先</h4>
  <p><%= f.radio_button :select_address, 0 %>ご自身の住所</p>
    <%= current_consumer.postal_code %>
    <%= current_consumer.address %><br />
    <%= current_consumer.name %>

  <% if current_consumer.addresses.any? %>
    <p><%= f.radio_button :select_address, 1 %>登録済みの住所から選択</p>
    <p><%= f.select :address_id, options_from_collection_for_select(current_consumer.addresses, :id, :address_display) %></p>
  <% end %>
    
  <p><%= f.radio_button :select_address, 2 %>新しいお届け先</p>
  <table>
    <tbody>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
      </tr>
    </tbody>
  </table> 
  
  <%= f.submit "確認画面に進む" %>

<% end %>