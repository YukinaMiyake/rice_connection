<div class="row">
  <div class="col-lg-7">
    <h3 class="mb-4"><%= @consumer.name %>さんの会員情報編集</h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <%= form_with model: @consumer do |f| %>
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @consumer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.number_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.phone_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td><%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "退会済み" %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "変更を保存", class: "bt btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>