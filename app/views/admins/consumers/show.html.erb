<h3><%= @consumer.name %>さんの会員情報</h3>
<table>
  <tr>
    <th>会員ID</th>
    <td><%= @consumer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @consumer.name %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @consumer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @consumer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @consumer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @consumer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><% if @consumer.is_active == true %>
    　　    有効
    　　<% else %>
    　　    退会済み
    　　<% end %>
    </td>
  </tr>
</table>
<%= link_to "編集", edit_admins_path(@consumer.id), class: "btn btn-success" %>
<%= link_to "注文履歴一覧を見る", admins_consumers_path, class: "btn btn-primary" %>