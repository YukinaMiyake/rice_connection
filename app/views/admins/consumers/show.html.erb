<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <h3 class="mb-4"><%= @consumer.name %>さんの会員情報</h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">会員ステータス</p>
      </div>
      <div class="col-lg-8">
        <% if @consumer.is_active == true %>
          有効
        <% else %>
          退会済み
        <% end %>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">会員ID</p>
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.id %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">氏名</p>
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.name %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">郵便番号</p> 
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.postal_code %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">住所</p>
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.address %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">電話番号</p>
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.telephone_number %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">メールアドレス</p>
      </div>
      <div class="col-lg-8">
        <p><%= @consumer.email %></p>
      <div>
    </div>
  </div>
</div>     
<div class="mt-3 row">
  <%= link_to "会員ステータスを変更する", edit_admins_consumer_path(@consumer), class: "btn btn-success" %>
</div>
<div class="mt-3 row">
  <%= link_to "注文履歴一覧を見る", admins_orders_path, class: "btn btn-primary" %>
</div>