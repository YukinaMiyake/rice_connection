<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <h3 class="mb-4"><%= @producer.name %>さんの会員情報</h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">会員ステータス</p>
      </div>
      <div class="col-lg-8">
        <% if @producer.is_active == true %>
          有効
        <% else %>
          退会済み
        <% end %>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">会員ID</p>
      </div>
      <div class="col-lg-8">
        <p><%= @producer.id %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">氏名</p>
      </div>
      <div class="col-lg-8">
        <p><%= @producer.name %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">郵便番号</p> 
      </div>
      <div class="col-lg-8">
        <p><%= @producer.postal_code %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">住所</p>
      </div>
      <div class="col-lg-8">
        <p><%= @producer.address %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">電話番号</p>
      </div>
      <div class="col-lg-8">
        <p><%= @producer.telephone_number %></p>
      </div>
    </div>
    
    <div class="mb-2 row">
      <div class="col-lg-4">
        <p class="font-weight-bold">メールアドレス</p>
      </div>
      <div class="col-lg-8">
        <p><%= @producer.email %></p>
      <div>
    </div>
  </div>
</div>     
    <div class="mt-3 row">
      <%= link_to "会員ステータスを変更する", edit_admins_producer_path(@producer), class: "btn btn-success" %>
    </div>
    <div class="mt-3 row">
      <%= link_to "発注履歴一覧を見る", admins_orders_path, class: "btn btn-primary mb-3" %>
    </div>
  
  
    <table class="table table-borderd">
      <thead>
        <tr style="background-color: #f5f5f5">
          <th>商品</th>
          <th>数量</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td>
            <%= order_detail.amount %>個
          </td>
          <td><%= order_detail.status %></td>
          <td><%= link_to "この注文へ", admins_order_path(order_detail.order) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


