<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <h3 class="mb-4"><%= @producer.name %>さんの会員情報編集</h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <%= form_with model: @producer do |f| %>
      <div class="mb-2 row">
        <%= f.label :is_status, "会員ステータス", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会済み" %>
        </div>
      </div>
    
      <div class="mb-2 row">
        <%= f.label :id, "会員ID", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :id, readonly: true, class: "form-control-plaintext" %>
        </div>
      </div>
      
      <div class="mb-2 row">
        <%= f.label :name, "氏名", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :name, readonly: true, class: "form-control-plaintext", value: f.object.name %>
        </div>
      </div>
      
      <div class="mb-2 row">
        <%= f.label :postal_code, "郵便番号", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :postal_code, readonly: true, class: "form-control-plaintext" %>
        </div>
      </div>
      
      <div class="mb-2 row">
        <%= f.label :address, "住所", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :address, readonly: true, class: "form-control-plaintext" %>
        </div>
      </div>
      
      <div class="mb-2 row">
        <%= f.label :telephone_number, "電話番号", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :telephone_number, readonly: true, class: "form-control-plaintext" %>
        </div>
      </div>
      
      <div class="mb-2 row">
        <%= f.label :email, "メールアドレス", class: "col-sm-4 col-form-label font-weight-bold" %>
        <div class="col-sm-8">
          <%= f.text_field :email, readonly: true, class: "form-control-plaintext" %>
        </div>
      </div>

      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
    
    <div class="mt-3">
      <%= link_to "会員情報画面に戻る", admins_producer_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
