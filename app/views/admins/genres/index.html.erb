<h1>ジャンル一覧・追加</h1>
<div class="row mt-3">
  <div class="col-md-6">
  <%= render 'layouts/error_messages', model: @genre %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-2">
    <p class="font-weight-bold text-center">ジャンル名</p>
  </div>
  <div class="col-md-4">
    <%= form_with model: @genre, url: admins_genres_path do |f| %>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="col-md-2">
      <%= f.submit "新規登録", class: "btn btn-info" %>
  </div>
    <% end %>
</div>
<div class="row mt-5">
  <div class="col-md-5 offset-md-1">
    <table class="table table-boadered">
      <thead>
        <tr style="background-color: #f5f5f5">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admins_genre_path(genre), class: "btn btn-success" %>
              <%= link_to "削除", admins_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>