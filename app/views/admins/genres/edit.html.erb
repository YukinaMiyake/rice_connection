<h3>ジャンル編集</h3>
<%= render 'layouts/error_messages', model: @genre %>
<div class="row mt-5">
  <div class="col-md-2 offset-md-1">
    <%= form_with model: @genre, url: admins_genre_path(@genre), method: :patch do |f| %>
      <%= f.label :name, "ジャンル名", class: "font-weight-bold" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
</div>
<div class="row mt-5 ml-5">
  <%= link_to "ジャンル一覧に戻る", admins_genres_path, class: "btn btn-outline-secondary" %>
</div>