<h3>注文履歴詳細</h3>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.consumer.name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td><%= form_with model: @order, url: admins_order_path(@order.id) do |f| %>
          <%= f.select :order_status, Order.statuses, class: "form_control" %>
          <%= f.submit '更新', class: "btn btn-success" %>
        <% end %></td>
  </tr>
</table>

<table class="table table-borderd">
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.order_details.total %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th>請求合計金額</th>
    <td><%= @order.order_details.total + @order.shipping_cost %></td>
  </tr>
</table>
